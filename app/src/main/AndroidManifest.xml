<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beyondbell.multility">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <!--Management-->
        <activity android:name=".LandingScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenu"/>
        <activity android:name=".settings.Settings"/>
        <!--Sensors-->
        <activity android:name=".sensors.Gyroscope"/>
        <activity android:name=".sensors.Compass"/>
        <!--Utilities-->
        <activity android:name=".utilities.Calculator"/>

    </application>

</manifest>
